```xml
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="action_report_payment_method"
            model="payment.method"
            string="Payment Method Report"
            report_type="qweb-pdf"
            name="payment_method_visibility.report_payment_method"
            file="payment_method_visibility.report_payment_method"
            print_report_name="'Payment Method Report - %s' % (object.name)"
        />

        <template id="report_payment_method_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="header">
                            <h2>Payment Method Report</h2>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Payment Type</th>
                                    <th>Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><t t-esc="doc.name"/></td>
                                    <td><t t-esc="doc.payment_type"/></td>
                                    <td><t t-esc="doc.active"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
